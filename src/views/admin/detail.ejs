<!doctype html>
<html lang="en">
<%- include('../partials/head.ejs') %>

  <body>
    <main class="container-fluid">
      <%- include('../partials/navBar.ejs') %>
        <!--Producto-->
        <br><br>
        <section class="row">
          <article class="col-12  card">
            <div class="card-body">
              <h2 class="display-4 text-primary  text-center pt-2">Dealle del Producto</h2>
            </div>
          </article>
          <article class="col-12 col-md-6 mx-auto mt-5 producto">

            <% if (miMoto.descuento==30) { %>
              <img class="descuento" src="/img/promo30.png" alt="Descuento 30%">
              <% } else if(miMoto.descuento==15){%>
                <img class="descuento" src="/img/promo15.png" alt="Descuento 15%">
                <%}%>
                  <div class="card-body">
                    <h5 class="card-title">
                      <%= miMoto.nombre%>
                    </h5>
                    <h5 class="card-title">$ <%= miMoto.precio %>
                    </h5>
                    <p class="card-text">
                      <%= miMoto.descripcion %>
                    </p>

                  </div>
                  <a href="/administrar" class="btn btn-danger">Volver</a>
          </article>
        </section>
    </main>

  </body>

</html>